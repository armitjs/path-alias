{
  "name": "@armit/path-alias",
  "version": "0.0.17",
  "keywords": [
    "ts",
    "typescript",
    "tsconfig",
    "ts-config",
    "tsconfig.json",
    "path",
    "alias",
    "mapping"
  ],
  "homepage": "https://github.com/armitjs/armit",
  "repository": {
    "type": "git",
    "url": "https://github.com/armitjs/armit",
    "directory": "packages/path-alias"
  },
  "license": "MIT",
  "author": {
    "name": "Yingchun Tian",
    "url": "https://github.com/tianyingchun"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    "./cjs": {
      "require": "./dist/register/index.cjs"
    },
    "./esm": {
      "import": "./dist/loader/index.mjs"
    },
    "./register": {
      "import": "./dist/loader/register.mjs"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "index.js",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-warnings\" node --loader ts-node/esm  ./build.ts",
    "?build-release": "When https://github.com/atlassian/changesets/issues/432 has a solution we can remove this trick",
    "build-release": "yarn build && rimraf ./_release && yarn pack && mkdir ./_release && tar zxvf ./package.tgz --directory ./_release && rm ./package.tgz",
    "dev": "tsup --watch",
    "clean": "rimraf --no-glob ./dist ./coverage ./tsconfig.tsbuildinfo",
    "lint": "eslint . --ext .ts,.mts,.tsx,.js,.jsx,.cjs,.mjs --cache --cache-location ../../.cache/eslint/path-alias.eslintcache",
    "test": "run-s test-unit",
    "test-unit": "vitest run --passWithNoTests",
    "test-unit-watch": "vitest watch --ui",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "module-alias": "^2.2.3",
    "pkg-up": "^4.0.0",
    "tsconfck": "^3.0.2",
    "tsconfig-paths": "4.2.0"
  },
  "devDependencies": {
    "@armit/eslint-config-bases": "0.1.4",
    "@types/module-alias": "2.0.4",
    "@types/node": "20.11.21",
    "@vitest/coverage-istanbul": "1.3.1",
    "@vitest/ui": "1.3.1",
    "cross-env": "7.0.3",
    "eslint": "8.57.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.5",
    "rimraf": "5.0.5",
    "ts-node": "10.9.2",
    "tsup": "8.0.2",
    "typescript": "5.3.3",
    "vite": "5.1.4",
    "vite-tsconfig-paths": "4.3.1",
    "vitest": "1.3.1"
  },
  "peerDependencies": {
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "peerDependenciesMeta": {
    "ts-node": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  }
}
